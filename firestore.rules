rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Companies collection - public read, admin write
    match /companies/{companyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // User tracking - users can only access their own data
    match /users/{userId}/tracking/{companyId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Macro events - public read, admin write
    match /macroEvents/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Macro events (snake_case) - public read, admin write
    match /macro_events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Article view counts - anyone can read and increment, no delete
    match /articleViews/{slug} {
      allow read: if true;
      allow create: if true;
      allow update: if true
        && request.resource.data.keys().hasOnly(['count'])
        && request.resource.data.count is int;
    }

    // Visitor tracking - anyone can write (for anonymous tracking), admin can read
    match /visitors/{document=**} {
      allow read: if request.auth != null && request.auth.token.email == 'ilwonyoon@gmail.com';
      allow write: if true;
    }

    // Company research requests - admin only
    match /companyRequests/{requestId} {
      allow read: if request.auth != null && request.auth.token.email == 'ilwonyoon@gmail.com';
      allow create: if request.auth != null && request.auth.token.email == 'ilwonyoon@gmail.com';
      allow update: if request.auth != null && request.auth.token.email == 'ilwonyoon@gmail.com';
    }
  }
}
